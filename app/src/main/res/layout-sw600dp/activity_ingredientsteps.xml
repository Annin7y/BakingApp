<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/ingredients_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recipeView"
        android:padding="1dp"
        android:textSize="@dimen/ingredient_title_text_size">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/steps_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ingredients_fragment_container"
        android:padding="1dp"
        android:textSize="@dimen/ingredient_title_text_size">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toLeftOf="@+id/ingredients_fragment_container"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/ingredient_title_text_size">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>