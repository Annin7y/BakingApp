<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/ingredients_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:textSize="@dimen/ingredient_title_text_size">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/steps_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredients_fragment_container"
        android:padding="1dp"
        android:textSize="@dimen/ingredient_title_text_size">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ingredients_fragment_container"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/ingredient_title_text_size">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
</ScrollView>