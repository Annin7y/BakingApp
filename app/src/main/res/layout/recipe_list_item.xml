<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/card_margin"
    card_view:contentPadding="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/card_margin"
    card_view:cardMaxElevation="@dimen/card_margin">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:padding="@dimen/image_view_padding"
        android:adjustViewBounds="true"
        />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recipeView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_height"
        android:scaleType="fitXY"
        android:padding="@dimen/image_view_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text ="@string/recipe_name"  />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recipeServingsView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_height"
        android:scaleType="fitXY"
        android:padding="@dimen/image_view_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="@string/servings_number"  />

</android.support.v7.widget.CardView>